<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/forum_activity"
            android:backgroundTint="@color/colorWhite"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/forumUserBio_id"
            >
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ask_user_image"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/user_profile"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorPrimary"
                        android:paddingTop="15dp"



                />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Joe Doe"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:id="@+id/ask_user_name"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Benin City, Edo state"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:id="@+id/ask_user_city"
                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 Monthago"
                            android:layout_marginTop="1dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="italic"
                            android:textSize="8sp"
                            android:id="@+id/ask_user_time"
                    />
                </LinearLayout>

            </LinearLayout>

            <TextView
                    android:id="@+id/ask_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="35dp"
                    android:text="Content"
                    android:textColor="@color/colorBlack"

            />


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"

            >



                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="@dimen/_80sdp"
                        android:layout_alignParentStart="true"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Participating:"
                            android:textStyle="italic"
                            android:textSize="15sp"
                            android:textColor="@color/colorBlack"
                            android:paddingTop="15dp"
                            android:id="@+id/ask_counter"
                    />

                    <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/ask_last_commenter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/user_profile"
                            app:civ_border_width="2dp"
                            app:civ_border_color="@color/colorPrimary"
                            android:paddingTop="5dp"



                    />

                </LinearLayout>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Answer"
                        android:textStyle="italic|bold"
                        android:textSize="15sp"
                        android:textColor="@color/colorBlack"
                        android:paddingTop="19dp"
                        android:id="@+id/answer_status"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"

                />
            </RelativeLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="15dp"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_5sdp"

                    android:gravity="center"

            >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center"
                        android:id="@+id/particpate_btn"
                >
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_spa_black_18dp"
                            android:tint="@color/colorPrimary"


                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="2dp"
                            android:text="PARTICIPATE"
                            android:textColor="@color/colorBlack"
                    />
                </LinearLayout>

                <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@color/colorPrimary"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        android:layout_gravity="center_vertical"
                />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center"
                        android:id="@+id/answer_btn"
                >
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_chat_black_18dp"
                            android:tint="@color/colorPrimary"


                    />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ANSWER NOW"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="2dp"
                            android:gravity="center"
                            android:textColor="@color/colorBlack"
                    />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>