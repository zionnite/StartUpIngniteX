<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.Settings.ChangePassword">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toobar_LinearLayout"
            android:background="@color/colorPrimary"
            android:paddingBottom="10dp"

    >
        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/left_arrow_icon"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="0dp"
                android:tint="@color/colorWhite"
                android:id="@+id/back_btn"



        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Settings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Password Reset"
                android:textColor="@color/colorWhite"
                android:layout_toRightOf="@+id/back_btn"
                android:gravity="center"
                android:layout_marginTop="10dp"
        />

    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toobar_LinearLayout"
            android:orientation="vertical"

    >
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="19dp"
                app:cardCornerRadius="1dp"
                android:layout_below="@+id/toobar_LinearLayout"
                android:id="@+id/ask_QuestionCardView"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

            >

                <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:background="@drawable/round_input_text"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/old_pass"
                        android:layout_weight="2"
                        android:hint="Old Password"
                        android:paddingHorizontal="10dp"
                        android:text=""
                        android:inputType="text"
                        android:maxLines="1"
                />
                <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:background="@drawable/round_input_text"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/new_pass"
                        android:layout_weight="2"
                        android:hint="New Password"
                        android:paddingHorizontal="10dp"
                        android:text=""
                        android:inputType="text"
                        android:maxLines="1"
                />
                <androidx.appcompat.widget.AppCompatEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:background="@drawable/round_input_text"
                        android:layout_marginTop="7dp"
                        android:layout_marginStart="9dp"
                        android:layout_marginEnd="9dp"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:id="@+id/conf_new_pass"
                        android:layout_weight="2"
                        android:hint="Confirm New Password"
                        android:paddingHorizontal="10dp"
                        android:text=""
                        android:inputType="text"
                        android:maxLines="1"
                />

                <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_shape"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:text="Change Password"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="50dp"
                        android:id="@+id/send_btn"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</RelativeLayout>