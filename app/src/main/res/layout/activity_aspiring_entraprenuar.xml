<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.UsersCategoryForm.AspiringEntraprenuar">




        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:id="@+id/banner_layout"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    android:paddingTop="20dp"
            >
                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/left_arrow_icon"
                        android:scaleType="centerCrop"
                        android:tint="@color/colorWhite"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/back_btn"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setup Profile"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp"
                        android:textStyle="bold"

                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"

            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aspiring Entrepreneur"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        android:paddingStart="@dimen/_12sdp"
                />
            </LinearLayout>


        </LinearLayout>


        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/banner_layout"
        >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/fullName_LinearLayout"

                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="50dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:id="@+id/full_name_text"
                            android:paddingStart="5dp"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Full  is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/full_name_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/aspireBusinessName"

                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Business Name"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:id="@+id/aspire_business_name_text"
                            android:paddingStart="5dp"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Aspire Business name  is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/businessName_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/expertise"
                        android:layout_below="@+id/aspireBusinessName"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expertise"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:id="@+id/expertise_text"
                            android:paddingStart="5dp"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Expertise is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/expertise_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/interest"
                        android:layout_below="@+id/expertise"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Interest"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <org.angmarch.views.NiceSpinner
                            android:id="@+id/interest_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select From List"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Interest Not Selected!"
                            android:paddingTop="5dp"
                            android:id="@+id/interest_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/week_to_start"
                        android:layout_below="@+id/interest"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Weeks to start"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:id="@+id/week_to_start_text"
                            android:paddingStart="5dp"
                            android:digits="0123456789"
                            android:inputType="phone"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Week to start is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/week_to_start_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/previous_experience"
                        android:layout_below="@+id/week_to_start"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Previous Experience"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="3"
                            android:id="@+id/previous_experience_text"
                            android:paddingStart="5dp"
                            android:layout_weight="2"
                            android:ems="3"
                            android:maxLength="50"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Previous Experience is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/previous_experience_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/work_email"
                        android:layout_below="@+id/name_of_contact"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:id="@+id/work_email_text"
                            android:paddingStart="5dp"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Email is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/work_email_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/work_phone"
                        android:layout_below="@+id/work_email"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:id="@+id/work_phone_text"
                            android:paddingStart="5dp"
                            android:digits="0123456789"
                            android:inputType="phone"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Phone is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/work_phone_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/city"
                        android:layout_below="@+id/work_phone"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current City"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textStyle="italic"
                            android:textColor="@color/colorBlack"
                            android:background="@drawable/round_input_text"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:id="@+id/city_text"
                            android:paddingStart="5dp"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="City is Empty!"
                            android:paddingTop="5dp"
                            android:id="@+id/city_error"
                            android:visibility="gone"
                    />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/mentor_LinearLayout"
                        android:layout_below="@+id/city"
                        android:paddingTop="9dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_marginTop="10dp"
                >

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="You need a Mentor?"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                    />
                    <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/mentor_radioGroup">


                        <androidx.appcompat.widget.AppCompatRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/yes_mentor"
                                android:text="Yes"
                                android:layout_margin="16dp"
                                app:theme="@style/RadioButtonTheme"
                                android:checked="false"/>



                        <androidx.appcompat.widget.AppCompatRadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/no_mentor"
                                android:text="No"
                                android:layout_margin="16dp"
                                app:theme="@style/RadioButtonTheme"
                                android:checked="false"/>



                    </RadioGroup>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:text="Mentor not Selected!"
                            android:paddingTop="5dp"
                            android:id="@+id/mentor_error"
                            android:visibility="gone"
                    />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:gravity="center"
                        android:layout_below="@+id/work_phone"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/round_shape"
                        android:id="@+id/Save"
                        android:layout_marginBottom="10dp"

                />
            </LinearLayout>
        </ScrollView>




</RelativeLayout>