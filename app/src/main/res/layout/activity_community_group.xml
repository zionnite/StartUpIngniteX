<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.CommunityGroupActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
    >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:id="@+id/inside_group_linearlayout"
            >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingTop="20dp"
                >
                    <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/left_arrow_icon"
                            android:scaleType="centerCrop"
                            android:tint="@color/colorWhite"
                            android:layout_marginEnd="5dp"
                            android:id="@+id/back_btn"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Community Hubs"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp"
                            android:textStyle="bold"

                    />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                >
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Group Name"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:id="@+id/group_name"


                    />
                </LinearLayout>



            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inside_group_linearlayout"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/post_RecyclerView"

            />
        </RelativeLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/send_feedback"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="10dp"

    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="2dp"
        >
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/add"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/post_add_attachment"
            />
            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:background="@drawable/round_input_text"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/post_input_box"
                    android:inputType="textCapSentences|textMultiLine"
                    android:autoLink="all"




                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Write a message"
                    android:paddingHorizontal="10dp"
                    android:text=""

            />

            />
            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:background="@drawable/round_input_text"
                    android:layout_marginStart="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_9sdp"
                    android:layout_gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/post_input_box_2"
                    android:inputType="textCapSentences|textMultiLine"
                    android:autoLink="all"
                    android:visibility="gone"

                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Write caption"
                    android:paddingHorizontal="10dp"
                    android:text=""

            />
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/sent"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/post_send_2"
                    android:paddingRight="4dp"
                    android:visibility="gone"
            />
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/sent"
                    android:tint="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/post_send"
                    android:paddingRight="4dp"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>