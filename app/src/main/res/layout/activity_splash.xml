<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="@color/colorWhite"
        tools:context=".Controller.SplashActivity">



        <ImageView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:id="@+id/app_logo"
                android:src="@drawable/start_up_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
        />




    <TextView
            android:layout_below="@+id/app_logo"
            android:id="@+id/app_logo_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developing Change-Makers, Extraordinary Leaders and Authentic Entrepreneurs"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-80dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="10dp"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="Powered By"
                android:gravity="center"

        />
        <ImageView
                android:layout_width="430dp"
                android:layout_height="80dp"
                android:src="@drawable/oiie"
                android:scaleType="fitCenter"
        />
    </LinearLayout>
</RelativeLayout>